{% extends "layout/base.html.twig" %}

{% block body %}
    <div class="row">
        <div class="col s6">

            <div class="divider"></div>
            <div class="section">
                <h5>Subtitle File Analyzis Report</h5>
                <p><i>Filename: {{ fileInfo.basename }}</i></p>

                <table class="highlight">
                    <thead>
                    <tr>
                        <th>Word</th>
                        <th>Number of occurences</th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for word, stat in stats %}
                        <tr>
                            <td>{{ word }}</td>
                            <td>{{ stat }}</td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>

        </div>
    </div>
{% endblock %}

{% block customJS %}
    {% if errorMessage %}
        displayErrorMessage('{{ errorMessage }}');
    {% endif %}
{% endblock %}
